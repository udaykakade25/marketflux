{
  "name": "marketflux",
  "version": "0.0.1",
  "private": true,
  "description": "MarketFlux - Real-time Market Data App",
  "type": "module",
  "packageManager": "pnpm@10.18.3",
  "scripts": {
    "dev": "pnpm --filter @marketflux/server dev",
    "build": "pnpm web:build && rm -rf server/dist && pnpm --filter=@marketflux/server --prod deploy server/dist && cp -r web/dist server/dist/assets && pnpm --filter=@marketflux/server build",
    "start": "pnpm server:start",
    "inspector": "pnpm --filter @marketflux/server inspector",
    "server:build": "pnpm --filter @marketflux/server build",
    "server:start": "pnpm --filter @marketflux/server start",
    "web:build": "pnpm --filter @marketflux/web build",
    "web:preview": "pnpm --filter @marketflux/web preview"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "prettier": "^3.5.3",
    "prettier-eslint": "^16.4.2",
    "tsx": "^4.19.4",
    "typescript-eslint": "^8.32.0"
  }
}
